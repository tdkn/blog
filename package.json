{
  "name": "blog",
  "version": "0.1.0",
  "packageManager": "pnpm@10.10.0",
  "private": true,
  "author": "Shun Tedokon <me@tdkn.dev> (https://tdkn.dev)",
  "bugs": {
    "url": "https://github.com/tdkn/blog/issues"
  },
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "preview": "next build && next start",
    "analyze": "ANALYZE=true next build",
    "lint": "pnpm run --aggregate-output /^lint:.*/",
    "lint:prettier": "prettier --check .",
    "lint:eslint": "next lint --dir .",
    "lint:stylelint": "stylelint -f verbose 'src/**/*.css' --max-warnings=0",
    "lint:types": "tsc --pretty --noEmit",
    "fix": "pnpm run --sequential /^fix:.*/",
    "fix:eslint": "next lint --fix --dir .",
    "fix:stylelint": "stylelint './src/**/*.css' -f verbose --fix",
    "fix:prettier": "prettier --write .",
    "test": "vitest",
    "postinstall": "husky"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "6.7.2",
    "@fortawesome/free-brands-svg-icons": "6.7.2",
    "@fortawesome/free-regular-svg-icons": "6.7.2",
    "@fortawesome/free-solid-svg-icons": "6.7.2",
    "@fortawesome/react-fontawesome": "0.2.2",
    "@next/bundle-analyzer": "15.3.1",
    "clsx": "2.1.1",
    "date-fns": "4.1.0",
    "framer-motion": "12.9.7",
    "glob": "11.0.2",
    "gray-matter": "4.0.3",
    "next": "15.3.1",
    "next-mdx-remote": "5.0.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "rehype-pretty-code": "0.14.1",
    "shiki": "3.3.0",
    "tailwind-merge": "3.2.0"
  },
  "devDependencies": {
    "@tailwindcss/forms": "0.5.10",
    "@tailwindcss/postcss": "4.0.7",
    "@testing-library/react": "16.3.0",
    "@types/mdx": "2.0.13",
    "@types/node": "22.15.12",
    "@types/react": "19.1.3",
    "@types/react-dom": "19.1.3",
    "@typescript-eslint/eslint-plugin": "8.31.1",
    "@typescript-eslint/parser": "8.31.1",
    "@vitejs/plugin-react": "4.4.1",
    "eslint": "9.26.0",
    "eslint-config-next": "15.3.1",
    "eslint-config-prettier": "10.1.2",
    "eslint-plugin-perfectionist": "2.11.0",
    "husky": "9.1.7",
    "jsdom": "26.1.0",
    "lint-staged": "15.5.2",
    "postcss": "8.5.3",
    "prettier": "3.5.3",
    "prettier-plugin-tailwindcss": "0.6.11",
    "remark-images": "4.1.0",
    "stylelint": "16.19.1",
    "stylelint-config-standard": "38.0.0",
    "stylelint-config-tailwindcss": "1.0.0",
    "tailwindcss": "4.0.7",
    "typescript": "5.8.3",
    "vercel": "41.7.0",
    "vitest": "3.1.3"
  },
  "volta": {
    "node": "22.15.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ],
    "patchedDependencies": {
      "stylelint-config-tailwindcss": "patches/stylelint-config-tailwindcss.patch"
    },
    "overrides": {
      "@types/react": "19.1.3",
      "@types/react-dom": "19.1.3"
    }
  }
}
